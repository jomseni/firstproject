{{>layouts/header}}
<!--수정폼은 생성폼이랑비슷하다-->

{{#article}}    <!---->
<form class="container" action="" method="post">        <!--form태그는 어디로 보낼지 어떻게 보낼지가 중요하다!!!!!!action속성으로 어디로보낼지 method속성으로 어떻게보낼지!-->
    <div class="mb-3">
        <label class="form-label">제목</label>
        <input type="text" class="form-control" name="title" value="{{title}}">   <!--dto의 필드명과 같은 이름으로 만들어줘야함  name-->
    </div>
    <div class="mb-3">
        <label class="form-label">내용</label>
        <textarea class="form-control" rows="3" name="content">{{content}}</textarea>  <!--dto의 필드명과 같은 이름으로 만들어줘야함  name-->
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a href="/articles/{{id}}">Back</a> <!--변수에 중괄호 두개는 머스태치 문법이다!-->
</form>
{{/article}}

{{>layouts/footer}}